<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="match_parent"
	android:layout_height="match_parent">

	<include android:id="@+id/llbar" layout="@layout/common_title_bar" />

	<RelativeLayout android:layout_width="fill_parent"
		android:layout_below="@+id/llbar" android:layout_height="wrap_content">
		<EditText android:id="@+id/tvVoice" android:layout_width="fill_parent"
			android:layout_height="140dp" />
		<Button android:id="@+id/btnStart" android:layout_width="fill_parent"
			android:layout_height="wrap_content" android:text="开始"
			android:layout_below="@+id/tvVoice" />
	</RelativeLayout>
</RelativeLayout>
